<Window x:Class="XOR_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Encriptor/Decryptor" Height="445" Width="525">
    <StackPanel>
        <TextBox IsReadOnly="True" TextWrapping="Wrap" Name="MyTextBox" Width="500" Height="210"></TextBox>
        <Label HorizontalContentAlignment="Center" Width="200" Height="30"  >Enter Key</Label>
        <TextBox  Name="MyKey" Margin="5" Width="200" Height="30"></TextBox>
        <Button Margin="5" Content="Load" Name="Button" Width="200" Height="30" Click="Button_Click" ></Button>
        <Button Margin="5" Content="Encription/Decryption" Name="Button1" Width="200" Height="30" Click="Button1_Click"></Button>
        <Button Margin="5" Content="Cancel" Name="Button2" Width="200" Height="30" Click="Button2_Click"></Button>

        
    </StackPanel>
</Window>
